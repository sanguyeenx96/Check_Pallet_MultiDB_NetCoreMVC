@model pdc.Models.Lichsu.User

@{
    ViewData["Title"] = "Sửa thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                Check Pallet Software <small>Version 1.0</small>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Quản lý</li>
                    <li class="breadcrumb-item active">Sửa thông tin tài khoản</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="content">
    <div class="container">
        <div class="col-lg-6">

        <div class="card card-warning shadow">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-edit"> </i> Sửa thông tin tài khoản</h3>
            </div>
            <form asp-action="Edit" class="form-horizontal">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Mã nhân viên</label>
                        <div class="col-sm-8">
                            <input asp-for="Manv" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Mật khẩu</label>
                        <div class="col-sm-8">
                            <input asp-for="Password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Họ tên</label>
                        <div class="col-sm-8">
                            <input asp-for="Hoten" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Bộ phận</label>
                        <div class="col-sm-8">
                            <input asp-for="Bophan" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Ca làm việc</label>
                        <div class="col-sm-8">
                            <input asp-for="Calamviec" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Xác nhận" class="btn btn-outline-warning btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

</div>



